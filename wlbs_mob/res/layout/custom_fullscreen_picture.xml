<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    
    <app.android.searcharound.utility.ScaleImageView
        android:id="@+id/imgview_full_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/actionbar_ic"
        android:layout_gravity="center" />

    <FrameLayout
        android:id="@+id/layout_picture_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="0.5"
        android:background="#3090c7"
        android:layout_gravity="bottom" >

        <ImageView
            android:id="@+id/imgview_remove"
            android:layout_width="30dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/bin_ic"
            android:layout_gravity="right" />
        
    </FrameLayout>

</FrameLayout>
