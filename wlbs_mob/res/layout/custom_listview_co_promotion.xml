<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@android:color/white"
    android:padding="5dp">
      <FrameLayout
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_gravity="center_vertical" >
        
	         <ProgressBar
	             	android:id="@+id/progressbar_img"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:indeterminate="true"
			        android:minHeight="70dp"
			        android:maxHeight="70dp"
			        android:visibility="visible"
			        android:background="@android:color/transparent"
			        android:layout_gravity="center"/>
	         
		      <ImageView
			        android:id="@+id/imgview_promotion"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:paddingLeft="5dp"
			        android:src="@drawable/no_img_ic" />
    	</FrameLayout>
    	<LinearLayout
    	    android:layout_height="wrap_content"
    	    android:layout_width="wrap_content"
    	    android:layout_gravity="center_vertical"
    	    android:layout_margin="10dp"
    	    android:orientation="vertical">
		      <TextView
	    	    android:id="@+id/txtview_name"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="Promotion 1"
	    	    android:textAppearance="?android:attr/textAppearanceMedium" />
		      
		       <TextView
	    	    android:id="@+id/txtview_detail"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="Discount 50%"/>
		</LinearLayout>
		
    	<LinearLayout
    	    android:layout_height="wrap_content"
    	    android:layout_width="fill_parent"
    	    android:layout_gravity="center_vertical"
    	    android:layout_margin="5dp"
    	    android:orientation="vertical">
		      <TextView
	    	    android:id="@+id/txtview_date"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="23/10/2014"
	    	    android:textSize="12sp"
	    	    android:layout_gravity="right"/>
		      
		       <TextView
	    	  
	    	    android:id="@+id/txtview_time"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:text="23.12"
	    	    android:textSize="12sp"
	    	    android:layout_gravity="right"/>
		      
		       <ImageView
		        android:id="@+id/imgview_remove"
		        android:layout_width="20dp"
		        android:layout_height="20dp"
		        android:layout_gravity="right"
		        android:src="@drawable/delete_ic" />
		</LinearLayout>
</LinearLayout>
