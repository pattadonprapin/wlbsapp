<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.android.searcharound"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/actionbar_ic"
        android:label="@string/app_name"
        android:logo="@drawable/actionbar_ic"
        android:theme="@style/Theme.Blue_app" >
        <activity
            android:name=".activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainTabActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.ShopOwnerRegActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".activity.ShopSelectingActivity"
            android:label="@string/title_activity_select_shop" >
        </activity>
        <activity
            android:name=".activity.ShopSavingActivity"
            android:label="@string/title_activity_save_shop" >
        </activity>
        <activity
            android:name=".activity.ShopNavigatingActivity"
            android:label="@string/title_activity_main_shop_view" >
        </activity>
        <activity
            android:name=".activity.ShopPictureSavingActivity"
            android:label="@string/title_activity_save_shop_picture" >
        </activity>
        <activity
            android:name=".activity.ShopPromotionSaving"
            android:label="@string/title_activity_shop_promotion_saving" >
        </activity>
        <activity
            android:name=".activity.PictureFullScreenActivity"
            android:label="@string/title_activity_picture_full_screen" >
        </activity>
        <activity
            android:name="app.android.searcharound.activity.PromotionFullScreenActivity"
            android:label="@string/title_activity_promotion_full_screen" >
        </activity>
    </application>

</manifest>
