<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

     <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp">
        
        <LinearLayout android:orientation="horizontal"
            		  android:layout_width="match_parent"
				      android:layout_height="wrap_content"
				      android:layout_centerInParent="true"
				      android:visibility="gone"
				      android:id="@+id/cwait_layout">
				      
            <ProgressBar
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:indeterminate="true"
		        android:minHeight="40dp"
		        android:maxHeight="40dp"
		        android:background="@android:color/transparent"/>
            
            <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Saving..."
				android:layout_marginLeft="5dp"
				android:layout_gravity="center_vertical"/>
        </LinearLayout>
        
         <EditText 
            android:id="@+id/txtboxFirstname"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/edittext_top_bg"
			android:padding="10dp"
			android:hint="Firstname"
			android:textColorHint="#cccccc"
			android:drawableLeft="@drawable/firstname"
			android:drawablePadding="20dp"/>
         
         <EditText 
            android:id="@+id/txtboxLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:padding="10dp"
            android:hint="Lastname"
            android:textColorHint="#cccccc"
            android:drawableLeft="@drawable/lastname"
            android:drawablePadding="20dp"/>
         
         <EditText 
            android:id="@+id/txtboxPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:padding="10dp"
            android:hint="Phone Number"
            android:textColorHint="#cccccc"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="20dp"/>
         
          <EditText 
            android:id="@+id/txtboxCitizenId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:padding="10dp"
            android:hint="Citizen ID"
            android:inputType="number"
            android:textColorHint="#cccccc"
            android:drawableLeft="@drawable/citizen"
            android:drawablePadding="20dp"/>
          
          <EditText 
            android:id="@+id/txtboxEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:padding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#cccccc"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="20dp"/>
          
          <EditText 
            android:id="@+id/txtboxPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_default_bg"
            android:padding="10dp"
            android:hint="Password"
            android:password="true"
            android:textColorHint="#cccccc"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="20dp"/>
          
           <EditText 
            android:id="@+id/txtBoxReTypePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bottom_bg"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:hint="Re-type Password"
            android:textColorHint="#cccccc"
            android:password="true"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="20dp"/>
           
            <Button 
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="Register"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            android:onClick="onClick"/>
         
     </LinearLayout>

</RelativeLayout>
